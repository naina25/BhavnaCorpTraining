@model IEnumerable<Assessment7.Models.Managers>

@{
    ViewData["Title"] = "Entry";
}

<h1 style="text-align:center">Managers Details</h1>

<p class="d-flex justify-content-center pt-2 pb-2">
    <a class="btn btn-md btn-outline-success mx-auto" asp-action="Create">Add a new manager</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a  class="btn btn-sm btn-info" asp-action="EditManager" asp-route-id="@item.ManagerId">Edit</a>
                <a class="btn btn-sm btn-primary ml-1" asp-action="GetDetails" asp-route-id="@item.ManagerId">Details</a>
                <a class="btn btn-sm btn-danger ml-1" asp-action="DeleteManager" asp-route-id="@item.ManagerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
