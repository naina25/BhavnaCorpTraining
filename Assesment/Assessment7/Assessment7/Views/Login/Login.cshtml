@model Assessment7.Models.Login

@{
    ViewData["Title"] = "Login";
}
<h1 style="text-align:center">Cab Services!</h1>
<div class="col-11 mx-auto pt-0 mt-3">
    <div class="card">
        <div class="card-header py-2 bg-secondary text-uppercase text-white">
            <h4>Please Login</h4>
        </div>
        <div class="card-body">
            <form enctype="multipart/form-data" asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="LogId" class="control-label"></label>
                    <input asp-for="LogId" class="form-control" />
                    <span asp-validation-for="LogId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="btn-group">
                    <div class="form-group text-right p-2">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">&nbsp;Back&nbsp;</a>
                    </div>
                    <div class="form-group text-left p-2">
                        <input type="submit" value="Login" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
